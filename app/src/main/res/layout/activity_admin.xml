                    android:text="" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/Guardian_Email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:text="Guardian's Email " />

