            </TableRow>

            <TableRow>
                <TextView />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/A1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:text="Address Line 1 " />

                <TextView
                    android:id="@+id/tvA1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
